{# begin {templatelocation} #}
<div class="uk-row">
	<table class="uk-table uk-table-hover uk-table-striped">
		<tr>
			<th class="uk-visible@m">
				{lang_forum}
			</th>
			<th>
				<div class="uk-visible@m">{lang_topic}</div>
				<div class="uk-hidden@m">{lang_forum} / {lang_topic} / {lang_latest_post}</div>
			</th>
			<th class="uk-visible@m">
				{lang_latest_post}
			</th>
		</tr>
<!-- BEGIN rows -->
		<tr>
			<td class="uk-visible@m">{forum}</td>
			<td>
				<div class="uk-hidden@m uk-text-bold uk-margin-small-bottom">
					{forum}
				</div>
				{subject}
				<div class="uk-hidden@m uk-text-bold uk-margin-small-top" style="font-size:.9em;">
					Last post on {date_notip}
				</div>
			</td>
			<td class="uk-visible@m">{date}</td>
		</tr>
<!-- END rows -->
	</table>
</div>
{# end {templatelocation} #}
