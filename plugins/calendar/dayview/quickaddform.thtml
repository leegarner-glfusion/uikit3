{# begin {templatelocation} #}
<form uk-form action="{site_url}/calendar/index.php" method="post">
    <input type="hidden" name="view" value="addentry">
    <input type="hidden" name="calendar_type" value="quickadd">
    <input type="hidden" name="hour_mode" value="{hour_mode}">
    <table class="uk-table uk-text-small uk-width-1-1">
        <tr>
            <td>{lang_quickadd}</td>
        </tr>
        <tr>
            <td>
                <table class="cal-quickadd">
                    <tr>
                        <td><b>{lang_event}</b></td>
                        <td><b>{lang_date}</b></td>
                        <td><b>{lang_time}</b></td>
                    </tr>
                    <tr>
                        <td><input class="uk-input uk-form-small uk-form-width-medium" type="text" size="20" maxlength="96" name="title" /></td>
                        <td>
                            <span dir="ltr">
                                <select class="uk-select uk-form-small uk-form-width-xsmall" name="start_month">
                                    {month_options}
                                </select>
                                /
                                <select class="uk-select uk-form-small uk-form-width-xsmall" name="start_day">
                                    {day_options}
                                </select>
                                /
                                <select class="uk-select uk-form-small uk-form-width-xsmall" name="start_year">
                                    {year_options}
                                </select>
                            </span>
                        </td>
                        <td>
                            <span dir="ltr">
                                <select class="uk-select uk-form-small uk-form-width-xsmall" name="start_hour">
                                    {hour_options}
                                </select>
                                :
                                <select class="uk-select uk-form-small uk-form-width-xsmall" name="start_minute">
                                    {minute_options}
                                </select>
                                {startampm_selection}
                            </span>
                            <button class="uk-button uk-button-primary uk-button-small" type="submit" value="{lang_add}">{lang_add}</button>
                            <input type="hidden" name="{gltoken_name}" value="{gltoken}">
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</form>
{# end {templatelocation} #}
