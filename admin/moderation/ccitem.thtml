<div class="uk-align-center" style="text-align:center;float:left;height:100px;width:100px;">
	<div class="uk-margin-remove">
		<a href="{page_url}">
			<img src="{page_image}" alt="{option_label}">
		</a>
	</div>
	<div class="uk-margin-remove">
		<a href="{page_url}">{option_label}</a>
	</div>
{!if count}
	<div class="uk-badge uk-badge-notification uk-badge-danger badge-notify" style="box-sizing:content-box !important;">{count}</div>
{!endif}
</div>
