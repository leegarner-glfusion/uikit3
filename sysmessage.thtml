{!!if {type}=='info' !!}
<script>
	jQuery(document).ready(function($) {
		glFusion.notify('{message}', 'success');
	});
</script>
{!else}
{!!if {type}=='error' !!}
  {!!set class 'uk-alert-danger' !!}
{!else}
  {!!set class 'uk-alert-success' !!}
{!endif}
<div class="{class}" uk-alert>
{!if !persist}
	<a href="" class="uk-alert-close" uk-close></a>
{!endif}
	<p>{message}</p>
</div>
{!endif}
